## Added gem
# A simple Ruby framework for building REST-like APIs. (https://github.com/ruby-grape/grape)
gem 'grape'
## Added gem
# Grape API routes (https://github.com/syedmusamah/grape_on_rails_routes)
gem 'grape_on_rails_routes'
## Added gem
# A simple facade for managing the relationship between your model and API. (https://github.com/ruby-grape/grape-entity)
gem 'grape-entity'
# Full-stack web application framework. (http://www.rubyonrails.org)
gem 'rails', '~> 5.2.2'
# Pg is the Ruby interface to the {PostgreSQL RDBMS}[http://www.postgresql.org/] (https://bitbucket.org/ged/ruby-pg)
gem 'pg', '~> 0.11'
# Puma is a simple, fast, threaded, and highly concurrent HTTP 1.1 server for Ruby/Rack applications (http://puma.io)
gem 'puma', '~> 3.11'
# This module allows Ruby programs to interface with the SQLite3 database engine (http://www.sqlite.org) (https://github.com/sparklemotion/sqlite3-ruby)
gem 'sqlite3'

# Coffee Script adapter for the Rails asset pipeline.
gem 'coffee-rails', '~> 4.2'
# Create JSON structures via a Builder-style DSL (https://github.com/rails/jbuilder)
gem 'jbuilder', '~> 2.5'
# This gem provides jQuery and the jQuery-ujs driver for your Rails 4+ application
gem 'jquery-rails'
# See https://github.com/rails/execjs#readme for more supported runtimes
# gem 'mini_racer', platforms: :ruby
# Sass adapter for the Rails asset pipeline.
gem 'sass-rails', '~> 5.0'
## Added gem
# Semantic UI, converted to Sass and ready to drop into Rails, Compass, or Sprockets. (http://github.com/doabit/semantic-ui-sass)
gem 'semantic-ui-sass'
# Turbolinks makes following links in your web application faster (use with Rails Asset Pipeline) (https://github.com/rails/turbolinks/)
gem 'turbolinks', '~> 5'
# Ruby wrapper for UglifyJS JavaScript compressor (http://github.com/lautis/uglifier)
